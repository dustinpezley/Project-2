{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-undef-init": "error",
    "no-duplicate-case": "error",
    "no-empty": "error",
    "no-func-assign": "error",
    "no-irregular-whitespace": "error",
    "no-unreachable": "error",
    "curly": "error",
    "dot-notation": "error",
    "eqeqeq": "error",
    "no-empty-function": "error",
    "default-case": "error",
    "no-fallthrough": "error",
    "no-unused-vars": "warn",
    "no-use-before-define": "error",
    "no-redeclare": "error",
    "quotes": ["error", "single"],
    "radix": "off",
    "no-unused-expressions": "warn"
  }
}
