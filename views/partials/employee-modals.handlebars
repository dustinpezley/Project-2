          <input
            type='text'
            class='form-control'
            id='employee-first-name-update'
          />
        </div>
        <div class='mb-3 row'>
          <label for='employee-last-name-update' class='col-form-label'>Last
            name</label>
          <input
            type='text'
            class='form-control'
            id='employee-last-name-update'
          />
        </div>
        <div class='mb-3 row'>
          <label for='employee-role-update' class='col-form-label'>Role</label>
          <select class='form-select' id='employee-role-update'>
            {{#each roles}}
              <option value='{{id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div class='mb-3 row'>
          <label
            for='employee-primary-venue-update'
            class='col-form-label'
          >Primary Venue</label>
          <select class='form-select' id='employee-primary-venue-update'>
            {{#each venues}}
              <option value='{{id}}'>{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn' data-bs-dismiss='modal'>Close</button>
        <button type='button' class='btn' id='update-employee-btn'>Update
          employee</button>
      </div>
    </div>
  </div>
</div>

