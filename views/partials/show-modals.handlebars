{{! Remove shows }}
<div
  class='modal fade'
  id='remove-show-modal'
  tabindex='-1'
  aria-labelledby='remove-show-modal-title'
  aria-hidden='true'
>
  <div
    class='modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl'
  >
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='remove-show-modal-title'>Remove Show</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <select class='form-select' id='show-remove-id'>
          {{#each shows}}
            <option value='{{id}}'>{{talent.title}}
