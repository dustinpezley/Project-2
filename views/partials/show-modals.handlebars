              {{venue.name}}
              on
              {{performance_date}}
              at
              {{performance_time}}</option>
          {{/each}}
        </select>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn' data-bs-dismiss='modal'>Close</button>
        <button type='button' class='btn' id='remove-show-btn'>Remove show</button>
      </div>
    </div>
  </div>
</div>