<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
      integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/foundation-sites@6.7.5/dist/css/foundation.css"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>PLACEHOLDER FOR VENUE NAME</title>
  </head>
  <body>
    {{! menu items held off-canvas }}
    <div
      class="offcanvas offcanvas-start text-bg-dark"
      data-bs-scroll="true"
      tabindex="-1"
      id="off-canvas-menu"
      aria-labelledby="off-canvas-menu"
    >
      <div class="offcanvas-header mt-3 mb-5">
        <a href="/" class="menu-link text-start" id="polyrhythm-link"><img
            src="/assets/images/polyrhythm.png"
            alt="polyrhythm logo with a direct link"
            class="w-50"
          /></a>
        <button
          type="button"
          class="btn-close btn-close-white pe-3"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div
        class="offcanvas-body d-flex flex-column justify-content-between text-center mt-5"
      >
        <div>
          <a
            href="/dolce"
            target="_blank"
            referrerpolicy="noreferrer"
            class="menu-link"
            id="dolce-link"
          ><img
              src="/assets/images/dolce.png"
              alt="dolce logo with a direct link"
              class="w-75 mb-5 mt-3"
            /></a>
          <a
            href="/modular"
            target="_blank"
            referrerpolicy="noreferrer"
            class="menu-link"
            id="modular-link"
          ><img
              src="/assets/images/modular.png"
              alt="modular logo with a direct link"
              class="w-75 mb-5 mt-2"
            /></a>
          <a
            href="/harmony"
            target="_blank"
            referrerpolicy="noreferrer"
            class="menu-link"
            id="harmony-link"
          ><img
              src="/assets/images/harmony.png"
              alt="harmony logo with a direct link"
              class="w-75 mt-3"
            /></a>
        </div>
        <div class="dropdown-center mt-3 text-center">
          <button
            type="button"
            class="btn dropdown-toggle btn-lg"
            id="calendar-button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >Upcoming shows</button>
          <ul class="dropdown-menu overflow-visible dropdown-menu-dark">
            <li><a class="dropdown-item" href="dolce/calendar">Dolce</a></li>
            <li><a
                class="dropdown-item"
                href="/modular/calendar"
              >Modular</a></li>
            <li><a
                class="dropdown-item"
                href="/harmony/calendar"
              >Harmony</a></li>
          </ul>
        </div>
        <div class="text-right flex-end">
          <a href="/login" class="text-decoration-none text-light">Admin</a>
        </div>
      </div>
    </div>
    {{! everything not in the menu, including the menu button }}
    <main>
      <div class="off-canvas-content">
        <button
          type="button"
          class="btn menu-btn position-fixed top-50 p-0 m-0"
          data-bs-toggle="offcanvas"
          data-bs-target="#off-canvas-menu"
          aria-controls="#off-canvas-menu"
        ><lottie-player
            src="/assets/json/Menu-btn.json"
            background="transparent"
            speed="1"
            style="width: 100px; height: 100px;"
            class="p-0 m-0 bg-light bg-opacity-50 rounded-end"
            hover
            loop
          ></lottie-player></button>
        {{{body}}}
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/js/fontawesome.min.js"
      integrity="sha512-TXHaOs+47HgWwY4hUqqeD865VIBRoyQMjI27RmbQVeKb1pH1YTq0sbuHkiUzhVa5z0rRxG8UfzwDjIBYdPDM3Q=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/combine/npm/foundation-sites@6.7.5/dist/js/foundation.min.js,npm/foundation-sites@6.7.5/dist/js/plugins/foundation.offcanvas.min.js"
    ></script>
    <script src="/javascript/script.js" type="module"></script>
  </body>
</html>